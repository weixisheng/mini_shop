<view class="container">
  <view class="address-list">
    <block wx:if="{{addressList.length>0}}">
      <view class="a-address" wx:for="{{addressList}}" wx:key="{{index}}">
      <view class="left-text {{item.isDefault? 'active':''}}" bindtap="selectTap" data-id="{{item.id}}">
        <view class="name-tel">
          {{item.linkMan}} {{item.mobile}}
        </view>
        <view class="address-box">
          {{item.provinceStr}}{{item.cityStr}}<span wx:if="{{item.areaStr}}">{{item.areaStr}}</span>{{item.address}}
        </view>
      </view>
      <view class="right-edit" bindtap="editAddress" data-id="{{item.id}}"></view>
    </view>
    </block> 
    <view  class='just-cen' wx:else>
      <view>暂无数据</view>
    </view>
  </view>
  <view class="bottom-box">
    <view class="add-btn" bindtap="addAddress">新增收货地址</view>
  </view>

</view>